@model IEnumerable<SuperHeroes.Data.Character>

@{
    ViewBag.Title = "Characters";
}

<h2>@ViewBag.Title</h2>

<p>
    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New", "Create")
    }

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @if (Request.IsAuthenticated && User.IsInRole("Admin") && User.IsInRole("Superhero"))
            {
                @Html.DisplayNameFor(model => model.Alias)

            }
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsHero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsVillan)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (Request.IsAuthenticated && User.IsInRole("Admin") && User.IsInRole("Superhero"))
                {
                    @Html.DisplayFor(modelItem => item.Alias)
                }
            </td>
            <td>
             
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsHero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsVillan)
            </td>

            <td>
                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.CharacterID }) @:|
                    @Html.ActionLink("Details", "Details", new { id = item.CharacterID })@:|
                    @Html.ActionLink("Delete", "Delete", new { id = item.CharacterID })
                }

            </td>
        </tr>
    }

</table>
