                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <form onsubmit="validateForm()" id="contact form">
                        <div class="contact-form shadow-z-1">
                            <h2 class="contact-title">Get in touch</h2>
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="form-control-wrapper">
                                        <input type="text" class="form-control empty">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control empty" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        @*<div class="floating-label">Your Name</div>*@
                                        <span class="material-input"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-6" })
                                    <div class="form-control-wrapper">

                                        @*<input type="text" class="form-control empty">*@
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control empty" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        @*<div class="floating-label">Email Address</div>
                                        <span class="material-input"></span>*@
                                    </div>
                                </div>
                            </div>
                            <div class="form-control-wrapper">
                                @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "form-control-wrapper" })
                                @*<input type="text" class="form-control empty">*@
                                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control empty" } })
                                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })

                                @*<div class="floating-label">Subject</div>*@
                                <span class="material-input"></span>
                            </div>
                            <div class="form-control-wrapper">
                                @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" })
                                @*<textarea name="message" id="message" class="form-control empty" cols="30" rows="10"></textarea>*@
                                @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control empty", @id = "message", @cols = "30", @rows = "10" } })
                                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                @*<div class="floating-label">Message</div>*@
                                <span class="material-input"></span>
                            </div>
                            <p><button type="submit" class="btn btn-danger">Send message</button></p>


                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
